<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Client.library.Controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="150" layoutY="100">
            <Label text="Library Management System" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button text="Login" onAction="#handleLogin" />
            <Label fx:id="errorLabel" textFill="red" />
        </VBox>
    </children>
</AnchorPane>
